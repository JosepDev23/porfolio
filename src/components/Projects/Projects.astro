---
import ProjectCard from './components/ProjectCard.astro'
---

<section class="projects">
  <h1 class="projects-title">My cool projects</h1>
  <div class="projects-main">
    <ProjectCard
      imgSrc="./img/project_price_comparator.png"
      technologies={['TypeScript', 'NestJS']}
    />
    <ProjectCard
      imgSrc="./img/project_alojamientos_upv.png"
      technologies={['TypeScript', 'NestJS', 'ReactNative']}
    />
    <ProjectCard
      imgSrc="./img/project_software_chronicles.jpg"
      technologies={['TypeScript', 'React', 'NextJS', 'NestJS']}
    />
    <ProjectCard
      imgSrc="./img/project_pokearcade.jpg"
      technologies={['TypeScript', 'React', 'NextJS']}
    />
  </div>
</section>

<style>
  .projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100rem;
    max-width: 90%;
  }

  .projects-title {
    color: var(--color-white);
    font-size: 3.7rem;
    margin: 2rem 0;
  }

  .projects-main {
    display: grid;
    grid-template-columns: auto auto;
  }

  @media (max-width: 1024px) {
    .projects-main {
      display: grid;
      grid-template-columns: auto;
    }
  }
</style>
